<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorWhite"
                                    app:contentPadding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_consume_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/minus"
            android:contentDescription="@string/app_name"
            />
        <TextView
            android:id="@+id/item_consume_time_label"
            android:layout_width="wrap_content"
            android:text="@string/time"
            android:layout_toRightOf="@id/item_consume_img"
            android:layout_toEndOf="@id/item_consume_img"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_consume_time_tv"
            android:layout_toRightOf="@id/item_consume_time_label"
            android:layout_toEndOf="@id/item_consume_time_label"
            />

        <TextView
            android:id="@+id/item_consume_money_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/sum"
            android:layout_toRightOf="@id/item_consume_img"
            android:layout_toEndOf="@id/item_consume_img"
            android:layout_below="@id/item_consume_time_label"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_consume_money_tv"
            android:layout_alignBaseline="@id/item_consume_money_label"
            android:layout_toRightOf="@id/item_consume_time_label"
            android:layout_toEndOf="@id/item_consume_time_label"
            />

        <TextView
            android:id="@+id/item_consume_type_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/dinner_type"
            android:layout_toRightOf="@id/item_consume_img"
            android:layout_toEndOf="@id/item_consume_img"
            android:layout_below="@id/item_consume_money_label"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_consume_type_tv"
            android:layout_alignBaseline="@id/item_consume_type_label"
            android:layout_toRightOf="@id/item_consume_type_label"
            android:layout_toEndOf="@id/item_consume_type_label"
            />

        <TextView
            android:id="@+id/item_consume_place_label"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/place"
            android:layout_toRightOf="@id/item_consume_img"
            android:layout_toEndOf="@id/item_consume_img"
            android:layout_below="@id/item_consume_type_label"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_consume_place_tv"
            android:layout_alignBaseline="@id/item_consume_place_label"
            android:layout_toRightOf="@id/item_consume_place_label"
            android:layout_toEndOf="@id/item_consume_place_label"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>