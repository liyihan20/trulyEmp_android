<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="8dp"
            tools:context="cn.com.truly.ic.trulyemp.DormFeeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ProgressBar
            android:id="@+id/frg_dorm_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/frg_dorm_no_fee_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/no_dorm_fee_tip"
            android:textColor="@color/colorBootDanger"
            android:visibility="gone"
            />

        <RelativeLayout
            android:id="@+id/frg_dorm_fee_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/dorm_year_month"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_year_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_year_month"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_number"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_dorm_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_year_month"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_dorm_number"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_rent"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_dorm_number"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_rent"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_management"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_rent"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_management"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_ele"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_ele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_management"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_ele"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_water"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_ele"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_water"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_repair"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_repair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_water"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_repair"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_fine"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_fine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_repair"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_fine"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_other_fee"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_fine"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_other"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_comment"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_other"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/frg_dorm_fee_comment"
                android:layout_marginTop="8dp"
                android:text="@string/dorm_total"
                android:textStyle="italic"
                />

            <TextView
                android:id="@+id/frg_dorm_fee_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@id/frg_dorm_fee_comment"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorBootDanger"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
