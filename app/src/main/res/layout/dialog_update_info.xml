<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="12dp"
            android:id="@+id/dialog_info_password_layout"
            >

            <TextView
                android:id="@+id/dialog_info_password_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="@string/fa_lock"
                android:textColor="@color/colorAccent"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/dialog_info_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_validation"
                    android:inputType="textPassword"
                    />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dialog_info_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="12dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/dialog_info_email_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/fa_envelope"
                android:textColor="@color/colorAccent"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dialog_info_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/dialog_info_email_icon"
                android:layout_toEndOf="@id/dialog_info_email_icon"
                android:layout_toRightOf="@id/dialog_info_email_icon">

                <EditText
                    android:id="@+id/dialog_info_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/dialog_info_short_phone_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dialog_info_email_icon"
                android:layout_alignStart="@id/dialog_info_email_icon"
                android:layout_below="@id/dialog_info_email_layout"
                android:text="@string/fa_phone"
                android:textColor="@color/colorAccent"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dialog_info_short_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/dialog_info_short_phone_icon"
                android:layout_toEndOf="@id/dialog_info_short_phone_icon"
                android:layout_toRightOf="@id/dialog_info_short_phone_icon">

                <EditText
                    android:id="@+id/dialog_info_short_phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_short_phone"
                    android:inputType="text"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/dialog_info_phone_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dialog_info_email_icon"
                android:layout_alignStart="@id/dialog_info_email_icon"
                android:layout_below="@id/dialog_info_short_phone_layout"
                android:text="@string/fa_phone"
                android:textColor="@color/colorAccent"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dialog_info_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/dialog_info_phone_icon"
                android:layout_toEndOf="@id/dialog_info_phone_icon"
                android:layout_toRightOf="@id/dialog_info_phone_icon">

                <EditText
                    android:id="@+id/dialog_info_phone_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_phone"
                    android:inputType="text"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/dialog_info_new_password_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dialog_info_email_icon"
                android:layout_alignStart="@id/dialog_info_email_icon"
                android:layout_below="@id/dialog_info_phone_layout"
                android:text="@string/fa_lock"
                android:textColor="@color/colorAccent"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dialog_info_new_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_alignTop="@id/dialog_info_new_password_icon"
                android:layout_toEndOf="@id/dialog_info_new_password_icon"
                android:layout_toRightOf="@id/dialog_info_new_password_icon">

                <EditText
                    android:id="@+id/dialog_info_new_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/prompt_new_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/dialog_info_confirm_password_icon"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/dialog_info_email_icon"
                android:layout_alignStart="@id/dialog_info_email_icon"
                android:layout_below="@id/dialog_info_new_password_layout"
                android:text="@string/fa_lock"
                android:textColor="@color/colorAccent"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dialog_info_confirm_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_alignTop="@id/dialog_info_confirm_password_icon"
                android:layout_toEndOf="@id/dialog_info_confirm_password_icon"
                android:layout_toRightOf="@id/dialog_info_confirm_password_icon">

                <EditText
                    android:id="@+id/dialog_info_confirm_password_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_new_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>