<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="dangerButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/colorBootDanger</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="primaryButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/colorBootPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="successButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/colorBootSuccess</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="infoButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/colorBootInfo</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="warningButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@color/colorBootWarning</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>



</resources>
